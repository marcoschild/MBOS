# === Variables ===
AS      = nasm
CC      = x86_64-elf-gcc
LD      = x86_64-elf-ld
CFLAGS  = -ffreestanding -m32 -nostdlib -nostdinc -fno-pie -fno-pic -Wall
LDFLAGS = -T linker.ld -m elf_i386

# === Targets ===
all: build run

boot.o: boot.asm
	$(AS) -f bin boot.asm -o boot.o

kernel.o: kernel.c
	$(CC) $(CFLAGS) -c kernel.c -o kernel.o

kernel.bin: kernel.o linker.ld
	$(LD) $(LDFLAGS) kernel.o -o kernel.bin

os-image: boot.o kernel.bin
	cat boot.o kernel.bin > os-image

build: boot.o kernel.o kernel.bin os-image

run: os-image
	qemu-system-i386 -drive format=raw,file=os-image

clean:
	rm -f *.o *.bin os-image
